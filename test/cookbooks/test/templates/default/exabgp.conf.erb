neighbor 127.0.0.1 {
  <% if @description -%>
  description "<%= @description %>";
  <% end -%>
  router-id <%= node['ipaddress'] %>;
  local-address <%= node['ipaddress'] %>;
  local-as 12345;
  peer-as 12345;
  hold-time 20;
  family {
    <% if @platform == 'ubuntu' && @platform_version == '14.04' -%>
    inet4 unicast;
    <% else -%>
    ipv4 unicast;
    <% end -%>
  }
}
