neighbor <%= node[:exabgp][:neighbor] %> {
  description "Upstream Provider";
  router-id <%= node[:exabgp][:router_id] %>;
  local-address <%= node[:exabgp][:local_address] %>;
  local-as <%= node[:exabgp][:local_as] %>;
  peer-as <%= node[:exabgp][:peer_as] %>;
  hold-time 5;

  static {
    route <%= node[:exabgp][:anycast_ip] %>/24 next-hop <%= node[:exabgp][:local_address] %>;
  }
}
